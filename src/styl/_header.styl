

.trianglify
  position absolute
  max-width 100vw
  height 100vh

.wrapper.show .canvas
  transform translate3d(rem(300px),0,0)

.menu-icon.active .toggle-menu::before
  transform-origin 0% 0%
  transform rotate(45deg)
  display block

.menu-icon.active .toggle-menu::after
  transform-origin 20% 133%
  transform rotate(-50deg)
  display block

.menu-icon.active .toggle-menu
  background-color transparent !important
  box-shadow none !important

.wrapper
  position relative
  overflow hidden
  max-width 100vw
  height 100vh

  > .canvas
    position relative
    max-width 100vw
    height 100%
    transform translate3d(0,0,0)
    transition .3s ease all

    > .menu
      position absolute
      width rem(300px)
      height 100%
      transform translate3d(rem(-300px),0,0)
      background-color $color-black


    > .content
      padding rem(30px) rem(10px)
      max-width 100vw
      height 100%

      > .search
        position relative
        padding rem(5px)
        float right
        z-index 2

        > .fa-search,
        > .fa-times
          color $color-black
          font-size rem(30px)
          text-shadow rem(0px) rem(0px) rem(1px) $color-gray-dark
          cursor pointer

      > .menu-icon
        position absolute
        padding rem(5px)
        width rem(33px)
        height rem(26px)
        cursor pointer

        > .toggle-menu
          position relative
          @extend $icon-menu
          top rem(10px)

          &::before,
          &::after
            content ""
            position absolute
            @extend $icon-menu

          &::before
            top rem(-8px)

          &::after
            top rem(8px)

.logo
  margin-top rem(130px)
  max-width 100vw
  height auto
  +below($size-mobile)
    margin-top rem(100px)

  > .date
    @extend $title
    width 100%
    margin-top rem(-10px)
    text-align center
    // font-weight bold

  > .title
    text-align center
    font-family $font-text
    font-size rem(90px)
    color $color-black
    text-shadow rem(0px) rem(0px) rem(2px) $color-gray
    +below($size-mobile)
      font-size  rem(60px)

  > .desc
    text-align center
    margin-top rem(-70px)
    font-family $font-title
    font-size rem(30px)
    color $color-black
    text-shadow rem(0px) rem(0px) rem(2px) $color-gray
    +below($size-mobile)
      font-size  rem(25px)
      margin-top rem(-30px)

  > .arrow-down
    margin rem(160px) auto
    width rem(70px)
    height rem(60px)
    text-align center
    border-radius rem(40px)
    color $color-gray
    transition .3s linear all
    +below($size-mobile)
      margin rem(80px) auto


    &:hover > .fa-arrow-down,
    &:hover > a
      color inherit
      text-shadow rem(0px) rem(10px) rem(8px) $color-black

    > a,
    > .fa-arrow-down
      color $color-black
      font-size rem(60px)
      text-shadow rem(0px) rem(0px) rem(1px) $color-gray-dark
      transition .3s linear all
