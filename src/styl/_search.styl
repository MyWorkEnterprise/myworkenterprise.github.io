
.content.show-overlay .overlay
  transform translate3d(0,0,0)

.overlay
  position fixed
  width 100%
  height 100%
  top rem(0px)
  left rem(0px)
  z-index 1
  transform translate3d(0, -100%, 0)
  transition .30s linear all
  background-color $color-black
  opacity 0.8


  > .search-input
    margin rem(100px) auto
    max-width 80%
    height rem(40px)

    > input
      @extend $text
      font-weight bold
      border none
      padding rem(10px)
      width 100%
      height 100%
      border-radius rem(5px)
      display none

      &:focus
        border-color $color-gray

    > .search-results
      width 100%
      padding 0
      margin 0
      list-style none

      > p
        @extend $text
        color $color-gray
        font-weight bold

        > small
          font-weight normal

      > h4
        @extend $text
        font-size rem(20px)
        color $color-gray
        text-align center
        font-weight bold

      > li
        margin-top rem(20px)
        padding rem(10px)
        display list-item
        width 100%
        transition .2s linear all

        &:hover
          box-shadow rem(0px) rem(0px) rem(1px) $color-gray

        > article
          width 100%
          text-align center

          > a
            @extend $text
            text-decoration none
            color $color-gray
            font-weight bold
            font-size rem(25px)

            > .date
              font-weight normal
              font-size rem(20px)
