
.author
  margin 0 auto
  max-width 100%
  // height auto
  height rem(400px)
  border rem(1px) solid $color-gray
  +below($size-tablet)
    height auto


  > .box
    position relative
    width 100%
    height 100%

    &::before
      content ""
      position absolute
      left 0
      top 0
      width 100%
      height rem(8px)
      background-image radial-gradient($color-blue, $color-blue-light, white)
      +below($size-tablet)
        top rem(-39px)


    > .photo
      position relative
      float left
      margin rem(40px) rem(20px) rem(0px) rem(40px)
      width rem(200px)
      height rem(200px)
      border-radius 100%
      background-size 100% 100%
      +below($size-tablet)
          float none
          margin rem(40px) auto rem(0px) auto

    > .content
      position relative
      float right
      // margin rem(30px) rem(25px) rem(8px)
      margin-top rem(40px)
      padding rem(10px)
      max-width rem(450px)
      height rem(230px)
      +below($size-tablet)
          float none
          margin 0
          margin-left auto
          margin-right auto

      > p
        @extend $text
        width 100%
        margin rem(10px) auto
        +below($size-tablet)
          text-align center

      > h1
        @extend $title
        width 100%
        margin 0
        +below($size-tablet)
          text-align center

      > .more
        max-width 100%
        margin-top rem(20px)
        display flex

        > a
          @extend $text
          transition .1s ease-in-out all
          flex 1 1 auto
          text-align center

          &:hover,
          &:hover > .fa
            color $color-blue
            transform scale(1.3,1.3) rotate(8deg)

          > .fa
            transition .1s ease-in-out all
            font-size rem(30px)
